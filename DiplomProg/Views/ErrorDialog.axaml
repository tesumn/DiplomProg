<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DiplomProg.Views.ErrorDialog"
        xmlns:local="using:DiplomProg.Views"
        x:DataType="local:ErrorDialog"
        Title="Ошибка"
        Width="300"
        Height="150">
	<StackPanel Margin="10">
		<TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap"/>
		<Button Content="OK" Command="{Binding CloseCommand}" HorizontalAlignment="Center" Margin="0,10,0,0"/>
	</StackPanel>
</Window>